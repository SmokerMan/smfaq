<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset>
		<field	name="created_by"
			class="required"
			label="COM_SMFAQ_NAME"
			type="text"
			size="40"
			maxlength="50"
			/>
			
		<field	name="created_by_email"
			label="COM_SMFAQ_EMAIL"
			type="text"
			size="40"
			maxlength="50"
			/>

		<field	name="question"
			class="required"
			label="COM_SMFAQ_QUESTION_FORM"
			type="smquestion"
			rows="5" 
			cols="10"
			/>	
		
		<field	name="captcha"
			type="SmCaptcha"
			/>	
		
		<field	name="answer_email"
			type="checkbox"
			label="COM_SMFAQ_SEND_MAIL"
			/>	
											
	</fieldset>
</form>